{
  "name": "eventti",
  "version": "2.0.0-alpha",
  "description": "A fast, small and reliable event emitter.",
  "keywords": [
    "event",
    "events",
    "emit",
    "emitter",
    "eventemitter",
    "pubsub"
  ],
  "license": "MIT",
  "author": {
    "name": "Niklas Rämö",
    "email": "inramo@gmail.com",
    "url": "https://github.com/niklasramo"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:niklasramo/eventti.git"
  },
  "type": "module",
  "main": "./dist/eventti.js",
  "module": "./dist/eventti.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "src",
    "dist",
    "package.json",
    "tsconfig.json",
    "README.md",
    "LICENSE.md"
  ],
  "ava": {
    "files": [
      "test/**/*"
    ]
  },
  "scripts": {
    "test": "ava",
    "build": "del ./dist && npm run ts-check && npm run format && npm run ts-bundle && npm run bundle && npm run minify && npm run size",
    "bundle": "$(npm bin)/rollup -c",
    "ts-bundle": "$(npm bin)/tsc --emitDeclarationOnly",
    "ts-check": "$(npm bin)/tsc --noEmit",
    "ts-test": "$(npm bin)/tsc ./test/types.ts --noEmit --lib ESNext",
    "format": "$(npm bin)/prettier --write ./src/**/*.ts",
    "validate": "$(npm bin)/prettier --list-different ./src/**/*.ts",
    "size": "for file in ./dist/*.js; do echo $file && $(npm bin)/gzip-size $file --include-original; done",
    "minify": "for file in ./dist/*.js; do $(npm bin)/terser $file -o $file --compress --mangle --comments false; done"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "8.3.2",
    "ava": "4.2.0",
    "del-cli": "4.0.1",
    "gzip-size-cli": "5.1.0",
    "prettier": "2.6.2",
    "rollup": "2.72.1",
    "terser": "5.13.1",
    "typescript": "4.6.4"
  }
}
