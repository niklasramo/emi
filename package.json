{
  "name": "eventti",
  "version": "4.0.0-alpha",
  "description": "Tiny and fast multi-purpose event emitter for Node.js and browser wrapped in a simple API.",
  "keywords": [
    "event",
    "events",
    "emit",
    "emitter",
    "eventemitter",
    "pubsub"
  ],
  "license": "MIT",
  "author": {
    "name": "Niklas Rämö",
    "email": "inramo@gmail.com",
    "url": "https://github.com/niklasramo"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:niklasramo/eventti.git"
  },
  "type": "module",
  "source": "./src/index.ts",
  "main": "./dist/eventti.js",
  "umd:main": "./dist/eventti.umd.js",
  "module": "./dist/eventti.js",
  "types": "./dist/eventti.d.ts",
  "exports": {
    ".": {
      "import": "./dist/eventti.js",
      "require": "./dist/eventti.cjs"
    }
  },
  "files": [
    "src",
    "dist",
    "package.json",
    "README.md",
    "LICENSE.md"
  ],
  "scripts": {
    "test": "npm run ts-check && npm run test-node && npm run test-browser",
    "test-browser": "karma start karma.conf.cjs",
    "test-node": "mocha tests/dist/tests.node.js",
    "build": "npm run del-dist && npm run ts-check && npm run format && npm run bundle && npm run minify && npm run size",
    "bundle": "rollup -c",
    "ts-check": "tsc --noEmit",
    "del-dist": "rimraf ./dist && rimraf ./tests/dist",
    "format": "prettier --write --no-error-on-unmatched-pattern \"./**/*\"",
    "format-check": "prettier --check --no-error-on-unmatched-pattern \"./**/*\"",
    "size": "for file in ./dist/*.js; do echo $file && gzip-size $file --include-original; done",
    "minify": "for file in ./dist/*.js; do terser $file -o $file --compress --mangle --comments false; done"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "11.1.6",
    "@types/chai": "4.3.11",
    "@types/mocha": "10.0.6",
    "chai": "4.4.1",
    "dotenv": "16.3.1",
    "gzip-size-cli": "5.1.0",
    "karma": "6.4.2",
    "karma-browserstack-launcher": "1.6.0",
    "karma-mocha": "2.0.1",
    "karma-mocha-reporter": "2.2.5",
    "mocha": "10.2.0",
    "prettier": "3.2.0",
    "rimraf": "5.0.5",
    "rollup": "4.9.5",
    "rollup-plugin-dts": "6.1.0",
    "terser": "5.26.0",
    "typescript": "5.3.3"
  }
}
