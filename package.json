{
  "name": "emi",
  "private": true,
  "version": "0.0.1",
  "description": "A fast, small and reliable event emitter.",
  "keywords": [
    "event",
    "events",
    "emit",
    "emitter",
    "eventemitter",
    "pubsub"
  ],
  "license": "MIT",
  "author": {
    "name": "Niklas Rämö",
    "email": "inramo@gmail.com",
    "url": "https://github.com/niklasramo"
  },
  "type": "module",
  "source": "src/index.ts",
  "exports": "./dist/emi.modern.js",
  "main": "./dist/emi.cjs",
  "module": "./dist/emi.module.js",
  "unpkg": "./dist/emi.umd.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "package.json",
    "tsconfig.json",
    "src",
    "dist",
    "README.md"
  ],
  "ava": {
    "files": [
      "test/**/*"
    ]
  },
  "scripts": {
    "test": "ava",
    "dev": "microbundle watch",
    "build": "npm run ts-check && npm run format && npm run bundle",
    "bundle": "del ./dist && microbundle --strict --name emi",
    "ts-check": "$(npm bin)/tsc --noEmit",
    "format": "$(npm bin)/prettier --write ./src/**/*.ts",
    "validate": "$(npm bin)/prettier --list-different ./src/**/*.ts"
  },
  "devDependencies": {
    "ava": "4.2.0",
    "del-cli": "4.0.1",
    "microbundle": "0.14.2",
    "prettier": "2.6.2",
    "typescript": "4.6.3"
  }
}
