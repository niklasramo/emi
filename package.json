{
  "name": "emi",
  "version": "0.0.1",
  "description": "A fast, small and reliable event emitter.",
  "keywords": [
    "event",
    "events",
    "emit",
    "emitter",
    "eventemitter",
    "pubsub"
  ],
  "license": "MIT",
  "author": {
    "name": "Niklas Rämö",
    "email": "inramo@gmail.com",
    "url": "https://github.com/niklasramo"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:niklasramo/emi.git"
  },
  "type": "module",
  "main": "./dist/emi.js",
  "module": "./dist/emi.js",
  "exports": {
    ".": "./dist/emi.js",
    "./emitter": "./dist/emi.emitter.js",
    "./unique-emitter": "./dist/emi.unique-emitter.js",
    "./src/": "./src/",
    "./dist": "./dist/"
  },
  "types": "./dist/types/index.d.ts",
  "files": [
    "src",
    "dist",
    "package.json",
    "tsconfig.json",
    "README.md",
    "LICENSE.md"
  ],
  "ava": {
    "files": [
      "test/**/*"
    ]
  },
  "scripts": {
    "test": "ava",
    "dev": "microbundle watch",
    "build": "del ./dist && npm run ts-check && npm run format && npm run ts-bundle && npm run bundle && npm run min && npm run size",
    "bundle": "$(npm bin)/rollup -c",
    "ts-bundle": "$(npm bin)/tsc --emitDeclarationOnly",
    "ts-check": "$(npm bin)/tsc --noEmit",
    "format": "$(npm bin)/prettier --write ./src/**/*.ts",
    "validate": "$(npm bin)/prettier --list-different ./src/**/*.ts",
    "size": "npm run size-esm && npm run size-umd && npm run size-e-esm && npm run size-e-umd && npm run size-u-esm && npm run size-u-umd",
    "size-esm": "echo emi.js gzip && $(npm bin)/gzip-size ./dist/emi.js --include-original",
    "size-umd": "echo emi.umd.js gzip && $(npm bin)/gzip-size ./dist/emi.umd.js --include-original",
    "size-e-esm": "echo emi.emitter.js gzip && $(npm bin)/gzip-size ./dist/emi.emitter.js --include-original",
    "size-e-umd": "echo emi.emitter.umd.js gzip && $(npm bin)/gzip-size ./dist/emi.emitter.umd.js --include-original",
    "size-u-esm": "echo emi.unique-emitter.js gzip && $(npm bin)/gzip-size ./dist/emi.unique-emitter.js --include-original",
    "size-u-umd": "echo emi.unique-emitter.umd.js gzip && $(npm bin)/gzip-size ./dist/emi.unique-emitter.umd.js --include-original",
    "min": "npm run min-esm && npm run min-umd && npm run min-e-esm && npm run min-e-umd && npm run min-u-esm && npm run min-u-umd",
    "min-esm": "$(npm bin)/terser ./dist/emi.js -o ./dist/emi.js --compress --mangle --comments false",
    "min-umd": "$(npm bin)/terser ./dist/emi.umd.js -o ./dist/emi.umd.js --compress --mangle --comments false",
    "min-e-esm": "$(npm bin)/terser ./dist/emi.emitter.js -o ./dist/emi.emitter.js --compress --mangle --comments false",
    "min-e-umd": "$(npm bin)/terser ./dist/emi.emitter.umd.js -o ./dist/emi.emitter.umd.js --compress --mangle --comments false",
    "min-u-esm": "$(npm bin)/terser ./dist/emi.unique-emitter.js -o ./dist/emi.unique-emitter.js --compress --mangle --comments false",
    "min-u-umd": "$(npm bin)/terser ./dist/emi.unique-emitter.umd.js -o ./dist/emi.unique-emitter.umd.js --compress --mangle --comments false"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "8.3.2",
    "ava": "4.2.0",
    "del-cli": "4.0.1",
    "gzip-size-cli": "5.1.0",
    "prettier": "2.6.2",
    "rollup": "2.71.0",
    "terser": "5.13.1",
    "typescript": "4.6.4"
  }
}
